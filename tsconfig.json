{
    "compilerOptions": {
      "types": ["node"],
      "noImplicitUseStrict": true,
      "target": "esnext",
      "module": "nodenext",
      "outDir": "dist",
      "sourceMap": true,
      "typeRoots": [
        "node_modules/@types",
        "src/types"
    ]
    },
    // "files": [
